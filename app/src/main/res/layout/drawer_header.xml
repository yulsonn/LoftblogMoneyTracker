<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:paddingTop="@dimen/drawer_padding_top"
    android:background="@drawable/drawer_patt"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/avatar"
        android:layout_width="@dimen/drawer_avatar_size"
        android:layout_height="@dimen/drawer_avatar_size"
        android:layout_margin="@dimen/drawer_margin_large"
        android:elevation="@dimen/drawer_avatar_elevation"
        android:src="@drawable/noname_avatar"
        app:border_width="@dimen/drawer_avatar_border"/>

    <TextView
        style="@style/DrawerText"
        android:id="@+id/drawer_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:text="@string/drawer_header_username"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/drawer_margin_large"/>

    <TextView
        style="@style/DrawerText"
        android:id="@+id/drawer_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drawer_header_email"
        android:layout_below="@id/drawer_username"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/drawer_margin_large"/>

</RelativeLayout>